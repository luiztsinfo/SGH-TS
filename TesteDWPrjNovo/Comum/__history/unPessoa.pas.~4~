unit unPessoa;

interface

type
  TPessoa = class
    private
      FId: integer;
    FNome: string;
    procedure SetId(const Value: integer);
    procedure SetNome(const Value: string);

    public
      property Id : integer read FId write SetId;
      property Nome : string read FNome write SetNome;
      function ToObj(AValue: string): TPessoa;
end;

implementation

uses
  System.JSON;

